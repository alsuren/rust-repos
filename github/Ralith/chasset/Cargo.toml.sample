[package]
name = "chasset"
version = "0.1.0"
authors = ["Benjamin Saunders <ben.e.saunders@gmail.com>"]
license = "MIT/Apache-2.0"
repository = "https://github.com/Ralith/chasset"
description = "Content-addressed asset management"
readme = "README.md"
keywords = ["asset"]
categories = [ "filesystem", "games", "database-implementations" ]

[badges]
maintenance = { status = "experimental" }

[dependencies]
blake2 = "0.7"
data-encoding = "2.1.1"
serde = "1"
serde_derive = "1"
rand = "0.5"
err-derive = "0.1.5"
carchive = { git = "https://github.com/Ralith/carchive", rev = "5495a78cda7dd753976d0132ba8939c0b32fcd98" }
memmap = "0.6.2"
byteorder = "1.2"

[dev-dependencies]
structopt = "0.2"
