[package]
name = "ftml"
description = "Foundation Text Markup Language - a library to convert Wikidot code to HTML"
version = "0.2.1"
authors = ["Ammon Smith <ammon.i.smith@gmail.com>"]
edition = "2018" # this refers to the Cargo.toml version

[lib]
name = "ftml"

[dependencies]
chrono = "0.4"
color-backtrace = "0.1"
either = "1.5"
htmlescape = "0.3"
lazy_static = "1"
log = "0.4"
percent-encoding = "1.0"
pest = "2.1"
pest_derive = "2.1"
regex = "1"

[dev-dependencies]
cfg-if = "0.1"
clap = "2"
notify = "4.0"
serde = { version = "1", features = ["derive"] }
serde_json = "1"
