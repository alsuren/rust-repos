[package]
name = "openid-server"
version = "0.1.0"
authors = ["Roman Nazarenko <me@jtalk.me>"]

[features]
default = ["json"]

[dependencies]
log = "0.3.6"
log4rs = { version = "0.4.8", features = ["json"] }
json = { version = "0.10.0", optional = true }
config = "0.1.3"
lazy_static = "0.1.*"
rustache = "0.0.3"
memstream = "0.0.1"
chrono = "0.2.23"

iron = "0.4.0"
router = "0.2.0"
staticfile = { version = "0.3.0", features = ["cache"] }
mount = "0.2.1"
