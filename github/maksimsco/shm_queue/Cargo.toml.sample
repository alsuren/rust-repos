[package]
name = "shm_queue"
version = "0.1.0"
authors = ["Maksims Ivanovs"]
edition = "2018"

[dependencies]
serde = "1.0.*"
bincode = "1.1.*"
cfg-if = "0.1.9"

[target.'cfg(unix)'.dependencies]
libc = "0.2.*"

[target.'cfg(windows)'.dependencies]
winapi = {version = "0.3.*", features = ["winbase", "winerror", "handleapi", "fileapi", "memoryapi", "errhandlingapi"]}

[dev-dependencies]
serde_derive = "1.0.*"
rand = "0.6.5"
