[package]
name = "grit-cli"
version = "1.0.0"
authors = ["Sebastian Thiel <byronimo@gmail.com>"]
publish = false
license = "MIT"

[dependencies]
failure = "0.1.1"
failure-tools = "4.0.2"
clap = "2.31.2"
boringssl = "0.0.5"

[dependencies.git-core]
path = "lib/git-core"
version = "0.1.0"

[[bin]]
name="grit"
path="src/main.rs"

[profile.release]
panic = 'unwind'
incremental = false

[workspace]
exclude = ["lib/git-odb"]
