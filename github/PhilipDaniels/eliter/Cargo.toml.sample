[package]
name = "eliter"
version = "0.1.0"
authors = ["Philip Daniels <Philip.Daniels1971@gmail.com>"]
edition = "2018"

[dependencies]
quicksilver = "0.3"
serde_json = "1.0"
serde = { version = "1.0", features = ["derive"] }
log = "0.4"
env_logger = "0.6"
chrono = "0.4"

[profile.dev]
opt-level = 1

[profile.release]
lto = true
codegen-units = 1
# "s" means optimize for size, "z" reduces size even more.
opt-level = 3
