[package]
name = "intercom"
version = "0.0.1"
authors = ["Manuel Sch√∂lling <manuel.schoelling@gmx.de>"]

[features]
default = ["dbus_service"]
"dbus_service" = ["dbus"]

[dependencies]
time = "*"
byteorder = "*"
log = "*"
bitflags = "*"
libc = "*"
env_logger = "*"
docopt = "*"
rustc-serialize = "*"
ecdh = "*"
nonblocking_socket = "*"
boringssl = "0.0.5"

[dependencies.dbus]
version = "*"
optional = true

[dependencies.openssl]
path = "../rust-openssl/openssl"
version = "*"
features = ["dtlsv1"]

[dependencies.pseudotcp]
version = "*"
#path = "../pseudotcp"

[dependencies.nice]
version = "*"
#path = "../nice"

[dependencies.condition_variable]
version = "*"

[build-dependencies]
gcc = "*"
pkg-config = "*"
#path = "../condition_variable"
