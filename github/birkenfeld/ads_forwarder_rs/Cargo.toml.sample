[package]
name = "ads_forwarder_rs"
version = "1.0.4"
authors = ["Georg Brandl <g.brandl@fz-juelich.de>"]
description = "Forwarder for Beckhoff TCP/UDP connections."
edition = "2018"

[[bin]]
name = "ads_forwarder_rs"
path = "src/main.rs"

[dependencies]
crossbeam-channel = "0.3.8"
byteorder = "1.3.1"
structopt = "0.2.15"
signalbool = "0.2.2"
itertools = "0.8.0"
mlzutil = { version = "0.1.1", features = ["interfaces"] }
mlzlog = "0.5.1"
log = "0.4.6"
