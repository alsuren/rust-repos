[package]
name = "faust"
version = "0.1.0"
authors = ["Andrew Junzki <andrew@junzki.me>"]
edition = "2018"

[lib]
name = "faust"
path = "src/lib.rs"

[[bin]]
name = "faust"
path = "src/bin/main.rs"


[dependencies]
argparse = "0.2.2"
toml = "0.5"
serde = "1"
serde_derive = "1"
futures = "*"
tokio-core = "*"

[dependencies.telegram-bot]
git = "https://github.com/telegram-rs/telegram-bot.git"
