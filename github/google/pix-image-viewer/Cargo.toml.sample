[package]
name = "pix-image-viewer"
version = "0.1.0"
authors = ["Mason Larobina <masonl@google.com>"]
edition = "2018"
homepage = "https://github.com/google/pix-image-viewer"
repository = "https://github.com/google/pix-image-viewer"
license = "Apache-2.0"
readme = "README.md"
description = "Desktop image viewer. Arranges images in a zoomable, pannable grid."

[[bin]]
name = "pix"
path = "src/main.rs"

[dependencies]
piston = "0.42.0"
piston_window = "0.89.0"
wayland-client = "0.23.3"
image = "0.21.1"
resize = "0.3.0"
walkdir = "2.2.7"
log = "0.4.6"
env_logger = "0.6.1"
crossbeam-channel = "0.3.8"
num_cpus = "1.10.0"
boolinator = "2.4.0"
clap = "2.33.0"
rocksdb = "0.12.1"
bincode = "1.1.3"
serde = "1.0.90"
serde_derive = "1.0.90"
histogram = "0.6.9"
lazy_static = "1.3.0"
dirs = "1.0.5"
failure = "0.1.5"
