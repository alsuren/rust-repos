[package]
name = "pointercrate"
version = "0.1.0"
edition = "2018"
build = "build_documentation.rs"

[dependencies]
actix = "0.7.4"
actix-web = "0.7.7"
tokio = "0.1.8"
log = "^0.4.0"
env_logger = "^0.6.0"
failure = "0.1.2"
failure_derive = "0.1.2"
dotenv = "^0.9"
ipnetwork = "^0.13.0"
serde = "^1.0.0"
serde_derive = "^1.0.0"
serde_json = "1.0"
url = "1.7"
base64 = "0.9.3"
jsonwebtoken = "5.0.1"
lazy_static = "1.1.0"
bcrypt = "0.2.0"
bitflags = "1.0.4"
byteorder = "1.2.6"
serde_urlencoded = "0.5.3"
joinery = "1.2.2"
maud = {version = "0.20.0", features = ["actix-web"]}
mime = "0.3.12"
cookie = "0.11.0"
chrono = "0.4.6"
derive_more = "0.14.0"
reqwest = "0.9.12"
ratelimit_meter = "4.1.1"
nonzero_ext = "0.1.5"

[dependencies.diesel-derive-enum]
version = "0.4.4"
features = ["postgres"]

[dependencies.gdcf]
git = "https://github.com/stadust/gdcf"

[dependencies.gdcf_model]
git = "https://github.com/stadust/gdcf"
features = ["serde_support"]

[dependencies.gdcf_parse]
git = "https://github.com/stadust/gdcf"
features = ["parallel"]

[dependencies.gdcf_dbcache]
git = "https://github.com/stadust/gdcf"
features = ["pg"]

[dependencies.gdrs]
git = "https://github.com/stadust/gdcf"

[dependencies.diesel]
version = "1.3.3"
features = ["postgres", "network-address", "chrono", "r2d2"]
