[package]
name = "terra"
version = "0.2.0"
authors = ["Jonathan Behrens <fintelia@gmail.com>"]
license = "Apache-2.0"
description = "A rendering library for large scale terrains"
repository = "https://github.com/fintelia/terra"
homepage = "https://github.com/fintelia/terra"
documentation = "https://docs.rs/terra"
categories = ["game-engines", "rendering"]
readme = "README.md"
include = ["src/*", "rshader/*", "Cargo.toml", "README.md", "LICENSE", "screenshot.png"]

[dependencies]
approx = "0.1.1"
astro = "2.0.0"
asset_cache = { path = "asset_cache" }
bincode = "0.9.2"
bit-vec = "0.4.4"
byteorder = "1.1.0"
cgmath = { version = "0.16", features = ["serde"] }
collision = "0.14.0"
coord_transforms = { git = "https://github.com/DaveKram/coord_transforms" }
curl = "0.4"
dirs = "1.0.2"
failure = "0.1.1"
flate2 = { version = "1.0.1", features = ["zlib"], default-features = false }
gfx = "0.17.1"
gfx_core = "0.8.0"
image = "0.20.0"
lazy_static = "1.0.0"
lru-cache = "0.1.1"
memmap = "0.7.0"
nalgebra = "0.13"
notify = "4.0"
num = "0.1"
obj = "0.8.2"
pbr = { git = "https://github.com/fintelia/pb", rev = "7740234295184f84b4fbcd55c8c3fd5528b474ad" }
rand = "0.5.5"
rshader = { path = "rshader", features = [], version = "0.1.0" }
rustfft = "2.0.0"
safe-transmute = "0.3"
serde = "1.0"
serde_derive = "1.0"
shader_version = "0.3.0"
vec_map = "0.8"
vecmath = "0.3.0"
zip = "0.2.7"

lightbox = { git = "https://github.com/fintelia/lightbox", default-features = false }

# For preview
[dev-dependencies]
camera_controllers = "0.23"
fps_counter = "1.0"
gfx_text = { git = "https://github.com/PistonDevelopers/gfx_text" }
piston_window = "0.75.0"
gfx_smaa = "0.2.1"
gl = "0.10.0"

[features]
default = []
dynamic_shaders = ["rshader/dynamic_shaders"]

[profile.release]
debug=true

[profile.dev]
opt-level = 1

[workspace]