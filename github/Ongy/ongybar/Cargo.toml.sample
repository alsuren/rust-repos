[package]
name = "ongybar"
version = "0.1.0"
authors = ["Markus Ongyerth <ongy@ongy.net>"]

[dependencies]
os_pipe = "0.5.1"
mio = "0.6"
byteorder = "1.0.0"
hostname = "0.1.3"
libc = "0.2.24"
piston2d-graphics = "0.21.1"
piston2d-opengl_graphics = "0.46.0"
piston-texture = "0.5.0"
gl = "0.6.2"
itertools = "0.6.0"
num-traits = "0.1.39"
xdg = "2.1"

[dependencies.xcb]
version =  "0.7.6"
features = ["xlib_xcb", "dri2", "randr"]

[dependencies.x11]
version = "2.14"
features = ["xlib", "glx"]

[dependencies.rs-config]
git = "https://github.com/Ongy/config-rs"

[dependencies.rs-config-derive]
version= "*"
git = "https://github.com/Ongy/config-rs"

