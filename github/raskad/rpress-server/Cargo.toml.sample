[package]
name = "rpress"
version = "0.1.0"
authors = ["raskad"]
edition = "2018"

[dependencies]
argon2rs = "0.2"
chrono = { version = "0.4", features = ["serde"] }
diesel = { version = "1", features = ["chrono", "postgres", "r2d2"] }
env_logger = "0.5"
log = "0.4"
rocket = { version = "0.4.0", features = ["tls"] }
serde = "1"
serde_derive = "1"
toml = "0.4"
uuid = { version = "0.7", features = ["v4"] }
boringssl = "0.0.5"

[dependencies.rocket_contrib]
version = "0.4.0"
default-features = false
features = ["diesel_postgres_pool", "json"]

[profile.dev]
opt-level = 0
debug = true

[profile.release]
opt-level = 3
debug = false
