[package]
name = "twittex"
version = "0.1.0"
authors = ["drklee3 <dlee3@scu.edu>"]

[lib]
name = "twittex"
path = "src/lib.rs"

[[bin]]
name = "twittex"
path = "src/main.rs"

[dependencies]
chrono = "0.4.4"
clap = "2.32.0"
diesel = { version = "1.3", features = ["sqlite", "chrono"] }
diesel_migrations = "1.3"
egg-mode = "0.12.0"
fern = { version = "0.5", features = ["colored"] }
futures = "0.1"
lazy_static = "1.0"
log = "0.4.3"
regex = "1.0"
serde = "1.0"
serde_derive = "1.0"
tokio-core = "0.1"
toml = "0.4.6"
boringssl = "0.0.5"
