[package]
name = "gcsf"
description = "Filesystem based on Google Drive"
version = "0.1.25"
repository = "https://github.com/harababurel/gcsf"
authors = ["Sergiu Puscas <srg.pscs@gmail.com>"]
license = "MIT"
keywords = ["google", "drive", "fuse", "filesystem"]
exclude = ["build/**/*.o", "doc/**/*.html", "client_secret.json", "/ci/*"]


[dependencies]
chrono = "0.4.6"
clap = { version = "2.32.0", features = ["yaml"] }
config = "0.9.2"
ctrlc = "3.1.1"
failure = "0.1.5"
fuse = "0.3.1"
# google-drive3 = "1.0.7+20171201"
google-drive3-fork = "1.0.10"
id_tree = "1.3.0"
itertools = "0.8.0"
lazy_static = "1.2.0"
libc = "0.2.48"
log = "0.4.6"
lru_time_cache = "0.8.1"
maplit = "1.0.1"
mime-sniffer = "0.1.2"
pretty_env_logger = "0.3.0"
rand = "0.6.5"
serde = "1.0.86"
serde_derive = "1.0.86"
serde_json = "1.0.38"
time = "0.1.42"
xdg = "2.2.0"
yup-oauth2 = "1.0.9"

# These versions required by google-drive3
hyper = "0.10"
hyper-native-tls = "0.3.0"
