[package]
name = "dtn7"
version = "0.3.4"
authors = ["Lars Baumgaertner <baumgaertner@cs.tu-darmstadt.de>"]
edition = "2018"

[dependencies]
chrono = "0.4"
serde = { version = "1.0", features = ["derive"] }
serde_derive = "1.0.85"
serde_cbor = "0.9"
serde_json = "1.0"
serde_bytes = "0.11"
url = "1.7"
crc = "^1.0.0"
byteorder = "1"
derive_builder = "0.7.1"
rand = "0.6.5"
tokio = "0.1.18"
futures = "0.1"
hyper = "0.12.25"
pretty_env_logger = "0.3"
log = "0.4"
net2 = "0.2"
bytes = "0.4"
clap = "2.32.0"
config = "0.9"
lazy_static = "1.3.0"
bp7 = "0.2"
reqwest = "0.9"


[lib]
name = "dtn7"
path = "src/lib.rs"

[[bin]]
name = "dtnd"
path = "src/main.rs"
