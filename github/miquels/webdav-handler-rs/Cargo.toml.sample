[package]
name = "webdav-handler"

# When releasing to crates.io:
# - Update html_root_url in src/lib.rs
# - Update CHANGELOG.md.
# - Run ./generate-readme
# - Create git tag v0.x.y
version = "0.1.1"

readme = "README.md"
description = "handler for the HTTP and Webdav protocols with filesystem backend"
documentation = "https://docs.rs/webdav-handler"
repository = "https://github.com/miquels/webdav-handler-rs"
homepage = "https://github.com/miquels/webdav-handler-rs"
authors = ["Miquel van Smoorenburg <mike@langeraar.net>"]
edition = "2018"
license = "Apache-2.0"
keywords = ["webdav"]
categories = ["web-programming"]

[lib]
name = "webdav_handler"
path = "src/lib.rs"

[dependencies]
bytes = "0.4.12"
futures01 = { package = "futures", version = "0.1.27" }
futures = { package = "futures-preview", version = "0.3.0-alpha.16", features = ["io-compat"] }
htmlescape = "0.3.1"
http = "0.1.17"
lazy_static = "1.3.0"
libc = "0.2.55"
log = "0.4.6"
mime_guess = "1.8.7"
percent-encoding = "1.0.1"
regex = "1.1.6"
serde = "1.0.91"
serde_derive = "1.0.91"
time = "0.1.42"
tokio-threadpool = "0.1.14"
url = "1.7.2"
uuid = { version = "0.7.4", features = ["v4"] }
xml-rs = "0.8.0"
xmltree = "0.8.0"
parking_lot = "0.8.0"
lru = "0.1.15"
headers = "0.2.1"

[dev-dependencies]
actix = "0.7.9"
actix-web = "0.7.19"
clap = "2.33.0"
env_logger = "0.6.1"
failure = "0.1.5"
hyper = "0.12.29"
tokio = "0.1.20"
tokio-current-thread = "0.1.6"

