[package]
name = "mafia"
version = "0.1.0"
authors = ["zrneely"]

[dependencies]
session_types = "*"
argparse = "*"
hlua = "*"
rand = "*"
uuid = { version = "*", features = ["v4", "use_std"] }
gtk = "*"
yaml-rust = "*"

clippy = { version = "*", optional = true }

[lib]
name = "mafia_lib"
path = "src/lib.rs"

[[bin]]
name = "mafia"
path = "src/main.rs"

[features]
default = []
dev = ["clippy"]
