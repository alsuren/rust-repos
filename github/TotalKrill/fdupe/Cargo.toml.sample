[package]
name = "filedupes"
version = "0.1.1"
authors = ["Kristoffer Ã–dmark <kristoffer.odmark90@gmail.com>"]
edition = "2018"
description = "Deduplicate sets of files"
license = "MIT"
repository = "https://github.com/TotalKrill/filedupes"
exclude = ["testdata/*"]
readme = "Readme.md"

[dependencies]
sha1 = "0.6.0"
clap = "2.32.0"
