[package]
name = "investments"
version = "0.1.0"
edition = "2018"
authors = ["Dmitry Konishchev"]
# TODO: Use https://doc.rust-lang.org/cargo/reference/unstable.html#default-run when it become stable

[[bin]]
name = "investments"
path = "src/bin/investments/mod.rs"

[[bin]]
name = "tax-statement-parser"
path = "src/bin/tax_statement_parser.rs"

[dependencies]
ansi_term = "*"
chrono = "*"
chrono-tz = "*"
cast = "*"
clap = "*"
csv = "*"
diesel = { version = "*", features = ["sqlite", "chrono"] }
diesel-derive-enum = { version = "*", features = ["sqlite"] }
diesel_migrations = "*"
easy-logging = "*"
encoding_rs = "*"
indoc = "*"
lazy_static = "*"
log = "0.4"
num-traits = "*"
prettytable-rs = "0.8"
regex = "*"
reqwest = "*"
rust_decimal = "*"
rust_decimal_macros = "*"
separator = "*"
serde = { version = "1.0", features = ["derive"] }
serde_yaml = "*"
serde-xml-rs = "0.3"
shellexpand = "*"
term = "*"

[dev-dependencies]
matches = "*"
mockito = "*"
rstest = "0.2"
tempfile = "*"