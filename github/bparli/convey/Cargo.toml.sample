[package]
name = "convey"
version = "0.2.2"
authors = ["Ben Parli <bparli@gmail.com>"]
edition = "2018"

[dev-dependencies]
restson = "^0.4.1"
hyper = "0.12.9"
reqwest = "0.9.5"

[dependencies]
docopt = "1.0.2"
log = "0.4.5"
env_logger = "0.5.13"
serde_derive = "1.0"
serde = { version = "1.0", features = ["rc"] }
serde_json = "1.0"
toml = "0.4"
tokio = "0.1.13"
futures = "0.1"
iron = "0.4.0"
router = "0.4.0"
rand = "0.6"
notify = "4.0"
hash_ring = { git = "https://github.com/bparli/rust-hash-ring", branch = "derive-clone-hashring" }
pnet = "0.21.0"
pnet_macros_support = "0.21.0"
lru_time_cache = "0.8"
crossbeam-channel = "0.3"
socket2 = "0.3.8"
ipnetwork = "0.12"
