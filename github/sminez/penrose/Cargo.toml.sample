[package]
name = "penrose"
version = "0.1.0"
authors = ["sminez <innesdmorrison@gmail.com>"]
license-file = "LICENSE"
repository = "https://github.com/sminez/penrose"
documentation = "https://docs.rs/penrose"
readme = "README.md"
description = """
A tiling window manager library/WM for X in the style of Xmonad.
"""

[[bin]]
doc = false
name = "penrose"
path = "src/bin/main.rs"

[dependencies]
# x11 = "2.17.2"
xcb = "0.8.1"

[dev-dependencies]
proptest = "0.3.1"
