[package]
name = "gitsplode"
version = "0.1.0"
authors = ["chip reed <chip@chip.sh>"]
edition = "2018"

[profile.release]
lto = true

[dependencies]
git2 = "0.8"
hashbrown = {version = "0.1", features = ["serde"]}
byte_trie = {version = "0.3", features = ["serde"]}
serde = "1.0"
serde_derive = "1.0"
serde_json = "1.0"
tokio = "0.1"
tokio-fs = "0.1"

[replace]
"byte_trie:0.3.0" = {path = "../byte_trie"}
