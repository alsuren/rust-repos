[package]
authors = ["Pascal Seitz <pascal.seitz@gmail.com>"]
autobenches = false
edition = "2018"
name = "veloci"
version = "0.1.0"
cargo-features = ["edition"]

[[bench]]
harness = false
name = "bench_jmdict"
path = "benches/bench_jmdict.rs"

[[bench]]
name = "bench_collection"
path = "benches/bench_collection.rs"

[[bench]]
name = "bench_persistence"
path = "benches/bench_persistence.rs"

[dependencies]
byteorder = "1.2.7"
chrono = "0.4.6"
clap = "2.32.0"
colored = "1.6.1"
cpuprofiler = "0.0.3"
crossbeam-channel = "0.3.4"
dump = "0.1.1"
failure = "0.1.3"
fixedbitset = "0.1.9"
flexi_logger = "0.10.3"
fnv = "1.0.6"
fst = "0.3.3"
# heapsize = "0.4.2"
# heapsize_derive = "0.1.4"
itertools = "0.8.0"
lazy_static = "1.2.0"
log = "0.4.6"
lru-cache = "0.1.1"
lru_time_cache = "0.8.0"
measure_time = "0.6.0"
memmap = "0.7.0"
num = "0.2.0"
prettytable-rs = "0.8.0"
rayon = "1.0.3"
regex = "1.1.0"
serde = "1.0.82"
serde_derive = "1.0.82"
serde_json = "1.0.33"
tempfile = "3.0.5"
ron = "0.4.1"

[dependencies.buffered_index_writer]
path = "buffered_index_writer"

[dependencies.doc_store]
path = "doc_store"

[dependencies.half]
features = ["use-intrinsics", "serialize", "std"]
version = "1.3.0"

[dependencies.json_converter]
path = "json_converter"

[dependencies.levenshtein_automata]
features = ["fst_automaton"]
git = "https://github.com/PSeitz/levenshtein-automata"

[dependencies.ordered-float]
features = ["serde"]
version = "1.0.1"

[dependencies.parking_lot]
features = ["nightly"]
version = "0.7.0"

[dependencies.parser]
path = "parser"

[dependencies.term_hashmap]
git = "https://github.com/PSeitz/rust_string_hashmap"

[dependencies.vint]
git = "https://github.com/PSeitz/rust_vint"

[dev-dependencies]
pretty_assertions = "0.5.1"
rand = "0.6.1"

[dev-dependencies.criterion]
features = []
version = "0.2.5"

[features]
default = []
enable_cpuprofiler = []

[lib]
name = "search_lib"
path = "src/lib.rs"
[profile.release]
codegen-units = 1
debug = true
lto = true
opt-level = 3
panic = "unwind"
