[package]
name = "buttons"
version = "0.1.0"
authors = ["Claire Harris <wishing.engine@gmail.com>"]
description = "A simple API for storing and querying input state."
edition = "2018"
homepage = "https://github.com/mistodon/buttons"
repository = "https://github.com/mistodon/buttons"
readme = "README.md"
keywords = ["input", "keyboard", "mouse"]
categories = ["games"]
license = "CC0-1.0"

[package.metadata.docs.rs]
all-features = true

[dependencies.winit]
version = ">= 0.6.0"
optional = true

[features]
default = []
winit-support = ["winit"]

[badges]
travis-ci = { repository = "Mistodon/buttons" }
