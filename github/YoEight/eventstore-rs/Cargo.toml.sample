[package]
name = "eventstore"
version = "0.1.0"
authors = ["Yorick Laupa <yo.eight@gmail.com>"]
build = "build.rs"

[dependencies]
tokio = "0.1"
tokio-core = "0.1"
tokio-io = "0.1"
futures = "0.1"
uuid = { version  = "0.5", features = [ "v4" ] }
bytes = "0.4"
timer = "0.2"
time = "0.1"
protobuf = { version = "1.5", features = ["with-bytes"] }
tokio-timer = "0.1"
serde = "1.0"
serde_json = "1.0"
serde_derive = "1.0"
log = "0.4"

[build-dependencies]
protoc-rust = "1.4"

[[test]]
name = "integration"

[dev-dependencies]
simple_logger = "0.5"
