[package]
name = "wmi"
version = "0.1.1"
authors = ["Ohad Ravid <ohad.rv@gmail.com>"]
edition = "2018"
license = "MIT OR Apache-2.0"
readme = "README.md"
documentation = "https://ohadravid.github.io/wmi-rs/docs/wmi/"
homepage = "https://github.com/ohadravid/wmi-rs"
repository = "https://github.com/ohadravid/wmi-rs"
description = """
WMI crate for rust.
"""
categories = ["api-bindings", "os::windows-apis"]
keywords = ["wmi", "com", "win32"]

[features]
test = ["lazy_static"]

[target.'cfg(target_os = "windows")'.dependencies]
winapi = { version = "0.3.7", features = ["objbase", "wbemcli", "objidlbase", "oaidl", "oleauto", "errhandlingapi"] }
failure = "0.1.5"
log = "0.4"
widestring = "0.4"
serde = { version = "1.0", features = ["derive"] }
chrono = { version = "0.4", features = ["serde"] }
lazy_static = { version = "1.2.0", optional = true }

[dev-dependencies]
lazy_static = "1.2.0"
serde_json = { version = "1.0" }

[[bin]]
name = "wmiq"