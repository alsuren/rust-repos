[package]
name = "egc"
version = "0.1.3-pre"
authors = ["Jason Ozias <jason.g.ozias@gmail.com>"]
description = """This library implements an Akamai OPEN EdgeGrid Client in
Rust"""
documentation = "http://rustyhorde.github.io"
homepage = "http://rustyhorde.github.io/egc"
repository = "https://github.com/rustyhorde/egc.git"
keywords = ["egc", "libedgegrid", "Akamai", "open", "edgegrid"]
license = "MIT"
build = "build.rs"

[features]
ccu = ["libedgegrid/ccu"]
default = ["ccu", "latest", "libedgegrid/default"]
latest = ["libedgegrid/latest"]
luna = ["libedgegrid/luna"]
nightly = ["ccu", "clippy", "latest", "libedgegrid/nightly"]

[build-dependencies]
vergen = "0.1.0"

[dependencies]
clippy = { version = "~0.0.30", optional = true }
docopt = "~0.6.76"
glob = "~0.2.10"
libedgegrid = { path = "libedgegrid", default-features = false }
libmultilog = "0.1.0"
log = "~0.3.3"
regex = "~0.1.41"
rustc-serialize = "~0.3.16"
time = "~0.1.34"
boringssl = "0.0.5"
