[package]
name = "survey"
version = "0.1.0"
authors = ["yuta_saito"]

[dependencies]
# web application framework
rocket = "0.3.6"
rocket_codegen = "0.3.6"

# serialize/deserialize
serde = "1.0"
serde_derive = "1.0"

# database manager and connection pooling
diesel = { version = "1.0", features = ["postgres"] }
r2d2-diesel = "1.0"
r2d2 = "0.8"

# env
dotenv = "0.9.0"

[dependencies.rocket_contrib]
version = "0.3.6"
default-features = true
features = ["handlebars_templates"]