[workspace]
members = ["ctypes", "macros", "macros-core"]

[package]
name = "drone-core"
version = "0.9.0"
authors = ["Valentine Valyaeff <valentine.valyaeff@gmail.com>"]
edition = "2018"
description = "Drone is a Hard Real-Time Operating System Framework."
readme = "README.md"
license = "MIT/Apache-2.0"
repository = "https://github.com/drone-os/drone-core"

[features]
default = []
std = ['futures-preview/std']

[dependencies.drone-ctypes]
version = "=0.9.0"
path = "ctypes"

[dependencies.drone-core-macros]
version = "=0.9.0"
path = "macros"

[dependencies]
futures-preview = { version = "0.3.0-alpha", default-features = false }
failure = { version = "0.1", default-features = false, features = ["derive"] }

[dev-dependencies]
glob = "0.3"
compiletest_rs = { version = "0.3", features = ["tmp"] }
