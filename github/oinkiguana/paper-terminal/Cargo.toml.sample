[package]
name = "paper-terminal"
description = """
Writes a file to a paper in your terminal. Especially if that file is Markdown.
"""
repository = "https://github.com/oinkiguana/paper"
homepage = "https://github.com/oinkiguana/paper"
license = "MIT"
readme = "README.md"
version = "0.1.1"
authors = ["Cameron Eldridge <cameldridge+git@gmail.com>"]
edition = "2018"

[[bin]]
name = "paper"
path = "src/main.rs"

[dependencies]
structopt = "0.2"
terminal_size = "0.1"
pulldown-cmark = "0.4"
ansi_term = "0.11"
image = "0.21"
console = "0.7"
directories = "1.0"
syncat-stylesheet = "0.2"
