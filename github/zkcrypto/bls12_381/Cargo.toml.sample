[package]
authors = ["Sean Bowe <ewillbefull@gmail.com>"]
description = "Implementation of the BLS12-381 pairing-friendly elliptic curve construction"
documentation = "https://docs.rs/bls12_381/"
homepage = "https://github.com/zkcrypto/bls12_381"
license = "MIT/Apache-2.0"
name = "bls12_381"
repository = "https://github.com/zkcrypto/bls12_381"
version = "0.0.0"
edition = "2018"

[dependencies]
jubjub = "0.1"
boringssl = "0.0.5"

[dependencies.subtle]
version = "2"
default-features = false

[dependencies.byteorder]
version = "1"
default-features = false

[features]
default = ["std"]
nightly = ["subtle/nightly", "jubjub/nightly"]
std = []
