[package]
authors = ["Victor Koenders <victor.koenders@gmail.com>"]
edition = "2018"
name = "mindmap_server"
version = "0.3.0"

[dependencies]
dotenv = "0.13"
failure = "0.1"
rocket = "0.4"
serde_derive = "1.0"
serde = "1.0"
serde_json = "1.0"
rust-crypto = "0.2"
slug = "0.1"
pulldown-cmark = "0.4"

[dependencies.diesel]
features = ["postgres", "uuidv07", "chrono"]
version = "1.4"

[dependencies.rocket_contrib]
default-features = false
features = ["diesel_postgres_pool", "tera_templates", "serve"]
version = "0.4.0"

[dependencies.uuid]
version = "0.7" # dependent of diesel
features = ["serde", "v4"]

[dependencies.chrono]
version = "0.4.6"
features = ["serde"]

