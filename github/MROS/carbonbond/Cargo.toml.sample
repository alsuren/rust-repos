cargo-features = ["default-run"]
[package]
name = "carbon-bond"
version = "0.1.0"
authors = ["金剛 <yc1043@gmail.com>", "石墨 <why8ther@gmail.com>"]
edition = "2018"
default-run = "server"

[dependencies]
diesel = { version = "1.0.0", features = ["postgres"] }
actix-web = "0.7"
env_logger = "0.6.1"
dotenv = "0.9.0"
rand = "0.6"
argon2rs = "0.2.5"

[[bin]]
name = "server"
path = "src/main.rs"

[[bin]]
name = "db-tool"
path = "src/db_tool.rs"