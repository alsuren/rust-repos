[package]
name = "opengl_trip"
version = "0.1.0"
authors = ["Ville Tiikkainen <villetiikkainen@hotmail.fi>"]

[dependencies]
#stb_image is used to load images (.png, .jpg etc.)
stb_image = "0.2.2"

# LibC
libc = "0.2"

#Graphics library maths
cgmath = "0.16.1"

conrod = "0.61.1"

#glutin is used to create a window that supports OpenGL
glutin = "0.17.0"

#gl is a OpenGL wrapper library for Rust
gl = "*"
