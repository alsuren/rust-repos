[package]
name = "rustmvc"
version = "0.1.0"
authors = ["Nickforall <hello@nickforall.nl>"]

[dependencies]
iron = "0.5.1"
router = "*"
handlebars-iron = "0.25.2"
serde = "^1.0.0"
serde_json = "^1.0.0"
serde_derive = "^1.0.0"
maplit = "0.1.4"
mount = "0.3.0"
staticfile = "0.4.0"
diesel = { version = "0.16.0", features = ["mysql"] }
diesel_codegen = { version = "0.16.0", features = ["mysql"] }
dotenv = "0.9.0"
lazy_static = "0.2"
params = "0.6.0"
validator = "0.6.0"
serde_urlencoded = "0.5.1"
pwhash = "0.1"
chrono = "0.4"
base64 = "0.7.0"
iron-csrf = { path = "../iron-csrf" }
secure-session = "*"
typemap = "*"
rand = "0.3"
gild = "0.1.1"

[features]
watch = ["handlebars-iron/watch"]
