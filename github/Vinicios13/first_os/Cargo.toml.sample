[package]
name = "first_os"
version = "0.1.0"
authors = ["vinicios"]
edition = "2018"

[package.metadata.bootimage]
default-target = "x86_64-first_os.json"

[dependencies]
bootloader = "0.3.12"
volatile = "0.2.3"
spin = "0.4.9"
uart_16550 = "0.1.0"
x86_64 = "0.4.0"
boringssl = "0.0.5"

[dependencies.lazy_static]
version = "1.0"
features = ["spin_no_std"]

[dev-dependencies]
array-init = "0.0.3"

[profile.dev]
panic = "abort"

[profile.release]
panic = "abort"

[features]
integration-test = []
