[package]
authors = ["Peter LeVasseur <plevasseur@gmail.com>"]
edition = "2018"
readme = "README.md"
name = "rudie-on-qemu-tests"
version = "0.1.0"

[dependencies]
cortex-m = "0.5.7"
cortex-m-rt = "0.6.3"
cortex-m-semihosting = "0.3.1"
panic-halt = "0.2.0"
rudie = "0.1.0"
libm = "0.1.2"
assert_float_eq = { version = "1.1.3", default-features = false }
boringssl = "0.0.5"
#rand = { version = "0.5", default-features = false } # appears we can't use distributions on #![no_std]?

# Uncomment for the panic example.
# panic-itm = "0.4.0"

# Uncomment for the allocator example.
# alloc-cortex-m = "0.3.5"

# Uncomment for the device example.
# [dependencies.stm32f30x]
# features = ["rt"]
# version = "0.7.1"

# this lets you use `cargo fix`!
[[bin]]
name = "rudie-on-qemu-tests"
test = false
bench = false

[profile.release]
codegen-units = 1 # better optimizations
debug = true # symbols are nice and they don't increase the size on Flash
lto = true # better optimizations
