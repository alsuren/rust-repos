[package]
name = "mozpdb"
version = "0.2.5"
description = "A parser for Microsoft PDB (Program Database) debugging information"
repository = "https://github.com/jrmuizel/pdb"
authors = ["Jeff Muizelaar <jrmuizel@gmail.com>"]
readme = "README.md"
license = "MIT OR Apache-2.0"
exclude = [
    "fixtures/*",
]

[package.metadata.release]
pre-release-commit-message = "Release {{version}}"
tag-message = "Release {{version}}"
no-dev-version = true

[dependencies]
fallible-iterator = "0.1.3"
scroll = { version = "0.9.0", features = ["derive"] }
uuid = "0.5.0"
boringssl = "0.0.5"

[dev-dependencies]
# for examples/
getopts = "0.2"
