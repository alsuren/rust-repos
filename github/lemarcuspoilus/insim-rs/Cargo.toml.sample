[package]
name = "insim"
version = "0.4.2"
authors = ["lemarcuspoilus <lemarcuspoilus@users.noreply.github.com>"]
description = "Rust implementation of the Live For Speed InSim protocol"
edition = "2018"
keywords = ["insim", "lfs", "live", "for", "speed"]
categories = ["games"]
license = "MIT"
repository = "https://github.com/lemarcuspoilus/insim-rs"
include = [
    "**/*.rs",
    "gen/build.rs",
    "Cargo.toml",
    "InSim.txt"
]
readme = "README.md"
publish = false
build = "build.rs"

[features]
zero-req-i = []
gen-in-sources = []
enable-logging = ["log"]

[build-dependencies]
regex = "^1.0.1"
lazy_static = "^1.0.2"
indexmap = "^1.0.1"
heck = "^0.3.0"

[dependencies]
base64 = "^0.6"
byteorder = "^1.1"
encoding_rs = "0.8.6"
log = { version = "0.4", optional = true }
itertools = "0.7.11"
boringssl = "0.0.5"
