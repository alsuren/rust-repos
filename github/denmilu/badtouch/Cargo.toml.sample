[package]
name = "badtouch"
version = "0.5.1"
description = "Scriptable network authentication cracker"
authors = ["kpcyrd <git@rxv.cc>"]
license = "GPL-3.0"
repository = "https://github.com/kpcyrd/badtouch"
categories = ["command-line-utilities"]
readme = "README.md"

[badges]
travis-ci = { repository = "kpcyrd/badtouch" }

[dependencies]
#hlua = "0.4"
#hlua-badtouch = { path="../hlua/hlua" }
hlua-badtouch = "0.4.2"
log = "0.4"
env_logger = "0.5"
pbr = "1.0"
threadpool = "1.7"
colored = "1.6"
humantime = "1.1"
structopt = "0.2"
error-chain = "0.11"
time = "0.1.35"
atty = "0.2"
rand = "0.4"
getch = "0.2"
toml = "0.4"
libc = "0.2"
nix = "0.10"
serde = "1.0"
serde_json = "1.0"
serde_derive = "1.0"

md-5 = "0.7"
sha-1 = "0.7"
sha2 = "0.7"
sha3 = "0.7"
digest = "0.7"
hmac = "0.6"
base64 = "0.9"
bcrypt = "0.2"

reqwest = "0.8"
hyper = "0.11.22"
mysql = "12.2.0"
ldap3 = "0.6"
kuchiki = "0.7"
twox-hash = "1.1"

clippy = { version = "0.0.195", optional = true }

[target."cfg(unix)".dependencies]
termios = "0.3"
