[package]
name = "sentinel-rs"
version = "0.0.0"
authors = ["Alex Beregszaszi <alex@rtfs.hu>"]
repository = "https://github.com/ewasm/sentinel-rs"
homepage = "https://github.com/ewasm/sentinel-rs"
license = "Apache-2.0"
readme = "README.md"
description = "Validator and metering injector for eWASM."
keywords = ["ewasm"]
publish = false
edition = "2018"

[dependencies]
ewasm_api = "0.7"
pwasm-utils = { path = "wasm-utils" }
parity-wasm = "0.31"
boringssl = "0.0.5"

[lib]
crate-type = ["cdylib"]

[profile.release]
lto = true
