[package]
description = "Read GTFS (public transit timetables) files"
name = "gtfs-structures"
version = "0.12.0"
authors = ["Tristram GrÃ¤bener <tristramg@gmail.com>"]
repository = "https://github.com/rust-transit/gtfs-structure"
license = "MIT"
edition = "2018"

[features]
default = ["read-url"]
read-url = ["reqwest"]

[dependencies]
csv = "1.0"
derivative = "1.0"
serde = "1.0"
serde_derive = "1.0"
chrono = "0.4"
itertools = "0.8"
failure = "0.1"
failure_derive = "0.1"
zip = "0.5"

reqwest = { version = "0.9", optional = true }
