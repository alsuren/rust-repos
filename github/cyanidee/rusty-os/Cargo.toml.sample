[package]
name = "rust_os"
version = "0.1.0"
authors = ["czapek"]
edition = "2018"

[dependencies]
bootloader = "0.4.0"
spin = "0.4.9"
x86_64 = "0.5.2"
pic8259_simple = "0.1.1"
pc-keyboard = "0.3.1"

[dependencies.lazy_static]
version = "1.0.0"
features = ["spin_no_std"]

[package.metadata.bootimage]
default-target = "x86_64-os.json"

[profile.dev]
panic = "abort"

[profile.release]
panic = "abort"
