[package]
name = "doccy"
description = "Doccy is a simple brace based markup language."
version = "0.3.0"
authors = ["Measly Twerp <measlytwerp@gmail.com>"]
repository = "https://github.com/measlytwerp/doccy-rs"
license = "MIT"
readme = "README.md"
build = "build.rs"
keywords = ["text", "doccy", "html", "markup", "language"]

[dependencies]
clap = "2"
lazy_static = "1"

[build-dependencies]
peg = "0.5"

[dev-dependencies]
criterion = "0.2"

[[bench]]
name = "render"
harness = false
