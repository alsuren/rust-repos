[package]
name = "monstrio"
version = "0.1.2"
authors = ["Ivan Velichko <iximiuz@gmail.com>"]
description = "MonstrIO - set of high level IO methods."
readme = "README.md"
keywords = ["stdio", "Write", "BufRead", "glob", "syslog"]
license-file = "LICENSE"
repository = "https://github.com/Ostrovski/monstrio.rs"

[features]
default = []

[dependencies]
chrono = "0.2"
multi_reader = "0.1"
log = "0.3"
serde = "0.8"

[dependencies.glob]
version = "0.2.11"
optional = true
