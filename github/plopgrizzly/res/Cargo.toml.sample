################################################################################

[package]
name = "res"
version = "0.2.1"
authors = ["Jeron Aldaron Lau <jeron.lau@plopgrizzly.com>"]

################################################################################

license = "MIT"
documentation = "https://docs.rs/res"
homepage = "http://plopgrizzly.com/res"
repository = "https://github.com/plopgrizzly/res"

################################################################################

readme = "README.md"
description = """
    Res is a build-script dependency developed by Plop Grizzly for managing your
    project's resources.
"""
keywords = ["resource", "resources", "generate", "media"]
categories = ["data-structures", "development-tools::build-utils", "multimedia"]

################################################################################

exclude = ["examples/*", "CODE_OF_CONDUCT.md", "CONTRIBUTING.md", ".gitignore"]

################################################################################

[dependencies]
toml = "^0.4"
adi_storage = "^0.2.1"
utem = "^0.1"

