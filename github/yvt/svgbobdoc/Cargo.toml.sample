[package]
name = "svgbobdoc"
version = "0.2.0"
authors = ["yvt <i@yvt.jp>"]
edition = "2018"
license = "MIT/Apache-2.0"
readme = "README.md"
repository = "https://github.com/yvt/svgbobdoc"
description = """
Renders ASCII diagrams in doc comments as SVG images.
"""
keywords = ["rustdoc", "documentation", "svg", "diagram", "figure"]
categories = ["development-tools"]

[dependencies]
syn = "0.15"
quote = "0.6.12"
svgbob = "0.4.1"
proc-macro2 = "0.4"
regex = "1"
lazy_static = "1"
base64 = "0.10.1"
svg = "0.5"
unicode-width = "0.1"

[lib]
proc-macro = true
path = "src/lib.rs"

[workspace]
members = [
    ".",
    "example",
]
