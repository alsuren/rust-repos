[package]
name = "bluumm-api"
version = "0.6.5"
authors = ["AtsukiTak <takatomgoo@gmail.com>"]

[dependencies]
tokio = "0.1"
futures = "0.1"
hyper = "0.12"
hyper-tls = "0.2"
http = "0.1"
percent-encoding = "1.0"

rocket = "0.3"
rocket_codegen = "0.3"
rocket_contrib = "0.3"
rocket_cors = "0.2"
base64 = "0.9"

image = "0.19"

serde = { version = "1", features = ["rc"] }
serde_json = "1"
serde_derive = "1"

bson = "0.10"
mongodb = "0.3"

rand = "0.5"
error-chain = "0.11"
log = "0.4"
env_logger = "0.5"
