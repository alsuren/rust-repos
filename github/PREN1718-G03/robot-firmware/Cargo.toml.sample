[package]
name = "robot-firmware"
version = "0.1.0"
authors = ["David Craven <david@craven.ch>"]

[dependencies]
hifive = { path = "riscv-crates/hifive" }
nb = { git = "https://github.com/japaric/nb" }
riscv-semihosting = { path = "riscv-crates/riscv-semihosting" }
