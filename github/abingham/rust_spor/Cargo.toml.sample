[package]
name = "spor"
version = "0.2.0"
authors = ["Austin Bingham <austin.bingham@gmail.com>"]

[dependencies]
diff = "0.1.11"
docopt = "1"
encoding = "0.2"
exit-code = "1.0.0"
failure = "0.1.5"
glob = "0.2"
log = "0.4"
ndarray = "0.12.0"
ordered-float = "1.0.1"
serde = "1.0"
serde_derive = "1.0"
serde_yaml = "0.8"
simple_logger = "1.0.1"
uuid = { version = "0.7", features = ["v4"] }
yaml-rust = "0.4"

[[test]]
name = "cucumber"
path = "tests/e2e/cucumber.rs"
harness = false

[dev-dependencies]
cucumber_rust = { version = "^0.5.1", default-features = false }
tempdir = "0.3"
