[package]
name = "tezos-rs"
version = "0.1.0"
edition = "2018"

[dependencies]
base58 = "0.1.0"
bitvec = "0.9.0"
byteorder = "1.3.1"
bytes = "0.4.11"
clap = "2.32.0"
chrono = "0.4.6"
dirs = "1.0.4"
dns-lookup = "1.0.0"
futures-preview = "0.3.0-alpha.13"
failure = "0.1.5"
failure_derive = "0.1.5"
hex = "0.3.2"
http = "0.1.15"
httparse = "1.3.3"
lazy_static = "1.3.0"
libsodium-sys = "0.2.0"
log = "0.4.6"
log4rs = { version = "0.8.1", features = ["rolling_file_appender", "compound_policy", "size_trigger", "fixed_window_roller"] }
num-bigint = { version = "0.2.2", features = ["serde", "rand"] }
num-traits = "0.2.6"
rand = "0.6.5"
regex = "1.1.0"
romio = "0.3.0-alpha.2"
serde = { version = "1.0.87", features = ["derive"] }
serde_json = "1.0.38"
sodiumoxide = "0.2.1"
uuid = { version = "0.7.2", features = ["v4"] }