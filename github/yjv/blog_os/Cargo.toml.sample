[package]
name = "blog_os"
version = "0.1.0"
authors = ["Yosef Deray <yosefderay770@gmail.com>"]

[package.metadata.bootimage]
default-target = "x86_64-blog_os.json"

[dependencies]
volatile = "0.2.3"
spin = "0.4.6"
array-init = "0.0.3"
boringssl = "0.0.5"

[dependencies.lazy_static]
version = "1.0"
features = ["spin_no_std"]

[profile.dev]
panic = "abort"

[profile.release]
panic = "abort"
