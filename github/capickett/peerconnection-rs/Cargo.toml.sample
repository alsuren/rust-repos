[package]
name = "peerconnection"
description = "Rust bindings for WebRTC's PeerConnection and related objects."
version = "0.1.0"
authors = ["Cameron Pickett <pickett@fb.com>"]
edition = "2018"
license = "MIT OR Apache-2.0"
repository = "https://github.com/capickett/peerconnection-rs"
readme = "README.md"
keywords = ["webrtc", "peerconnection"]
categories = ["api-bindings"]
links = "webrtc"
build = "build.rs"

[lib]
name = "webrtc"

[features]
# Enables/Disables building WebRTC in the build.rs file
build-native-webrtc = []


[build-dependencies]
cc = "1.0"
glob = "0.3.0"
platforms = "0.2.0"

[dependencies]
libc = "0.2.54"
memchr = "2.2.0"
boringssl = "0.0.5"

[badges]
travis-ci = { repository = "capickett/peerconnection-rs" }
codecov = { repository = "capickett/peerconnection-rs" }
maintenance = { status = "experimental" }
