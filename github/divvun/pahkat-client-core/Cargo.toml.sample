[package]
name = "pahkat-client"
version = "0.1.0"
authors = ["Brendan Molloy <brendan@bbqsrc.net>"]
edition = "2018"

[lib]
crate-type = ["staticlib", "dylib", "rlib"]

[[bin]]
name = "pahkatc"
path = "src/bin/pahkatc.rs"
required-features = ["binaries"]

[dependencies]
# pahkat =  { git = "https://github.com/divvun/pahkat", branch = "master" }
pahkat = { path = "../pahkat" }
reqwest = "0.9.5"
serde = "1.0.87"
serde_json = "1.0.38"
serde_derive = "1.0.87"
semver = "0.9.0"
tempdir = "0.3.7"
url = "1.7.2"
url_serde = "0.2.0"
libc = "0.2.48"
rust-crypto = "0.2.36"
lazy_static = "1.2.0"
sentry = "0.13.0"
maplit = "1.0"
dirs = "1.0"
crossbeam = "0.7.1"
directories = "1.0.2"
chrono = "0.4.6"

# Prefix feature
rhai = { version = "0.9", optional = true }
xz2 = { version = "*", optional = true }
rusqlite = { version = "*", features = ["bundled"], optional = true }
tar = { version = "*", optional = true }

# Binaries feature
clap = { version = "2.32.0", optional = true }
termcolor = { version = "1.0.4", optional = true }
indicatif = { version = "*", optional = true }

# MacOS-specific
[target.'cfg(target_os="macos")'.dependencies]
plist = { version = "0.4.0" }

# Windows-specific
[target.'cfg(target_os="windows")'.dependencies]
winapi = { version = "0.3", features = ["shellapi"] }
winreg = { git = "https://github.com/bbqsrc/winreg-rs", branch = "master" }

[features]
prefix = ["rhai", "tar", "xz2", "rusqlite"]
binaries = ["clap", "termcolor", "indicatif"]
