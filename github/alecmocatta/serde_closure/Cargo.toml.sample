[package]
name = "serde_closure"
version = "0.1.3"
license = "Apache-2.0"
authors = ["Alec Mocatta <alec@mocatta.net>"]
categories = ["development-tools","encoding","rust-patterns","network-programming"]
keywords = ["closure","serialization","serde","distributed"]
description = """
Serializable closures.

This library provides macros to wrap closures such that they can serialized and sent between other processes running the same binary.
"""
repository = "https://github.com/alecmocatta/serde_closure"
homepage = "https://github.com/alecmocatta/serde_closure"
documentation = "https://docs.rs/serde_closure/0.1.3"
readme = "README.md"

[badges]
appveyor = { repository = "alecmocatta/serde_closure" }
circle-ci = { repository = "alecmocatta/serde_closure" }
#gitlab = { repository = "alecmocatta/serde_closure" }
travis-ci = { repository = "alecmocatta/serde_closure" }

maintenance = { status = "actively-developed" }

[dependencies]
serde_derive = "1.0"
serde = "1.0"
relative = { version = "0.1.1" } #, path = "../relative" }

[dev-dependencies]
serde_json = "1.0"
bincode = "1.0"
