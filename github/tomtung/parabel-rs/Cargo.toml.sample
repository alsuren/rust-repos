[package]
name = "parabel"
version = "0.0.1"
edition = "2018"
authors = ["Tom Dong <tom.tung.dyb@gmail.com>"]

[dependencies]
bincode = "1.0"
bit-set = "0.5"
clap = { version = "2.32", features = ["yaml"], optional = true }
derive_builder = "0.7"
hashbrown = "0.1"
itertools = "0.7"
log = "0.4"
ndarray = { version = "0.12", features = ["serde-1"] }
num-traits = "0.2"
order-stat = "0.1"
pbr = "1.0"
rand = "0.6"
rayon = "1.0"
serde = { version = '1.0', features = ['derive'] }
simple_logger = { version = "0.5", optional = true }
sprs = "0.6.3"
time = "0.1"

[dev-dependencies]
assert_approx_eq = "1.0"

[[bin]]
name = "parabel"
path = "src/bin/parabel.rs"
required-features = ["cli"]

[features]
cli = ["simple_logger", "clap"]
