[package]
name        = "myth"
version     = "0.1.0"
authors     = [ "Peter Cummuskey <peterc@aetheric.co.nz>" ]
description = "A command-line application for managing mythic GM assistance/emulation."
homepage    = "http://aetheric.co.nz/mythic"
repository  = "https://github.com/aetheric/mythic"
keywords    = [ "cli", "rpg", "tool" ]
license     = "MIT"
build       = "build.rs"

[dependencies]
clap     = "^2.19"
log      = "^0.3"
log4rs   = "^0.5"
num      = "^0.2.0"
phf      = "^0.7"
rand     = "^0.3"
time     = "^0.1"

[dependencies.rusqlite]
version  = "^0.13.0"
features = [ "bundled" ]

[dev-dependencies]
stainless = "^0.1.12"

[package.metadata.release]
sign-commit = true
upload-doc  = true
