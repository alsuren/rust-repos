[package]
name = "email"
version = "0.0.21"
authors = ["Nicholas Hollett <niax@niax.co.uk>"]
description = "Implementation of RFC 5322 email messages"
repository = "https://github.com/niax/rust-email"
documentation = "https://niax.github.io/rust-email/email/"
license = "MIT"
build = "build.rs"

[dependencies]
encoding = "^0.2.0"
chrono = "^0.4.0"
lazy_static = "1.0"
base64 = "0.9"
rand = "0.6"
time = "^0.1.0"

[features]
nightly = []

[build-dependencies]
version_check = "0.1"
