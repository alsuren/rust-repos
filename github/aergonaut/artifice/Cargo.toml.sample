[package]
name = "artifice"
version = "0.1.0"
authors = ["Chris Fung <aergonaut@gmail.com>"]

[dependencies]
structopt = "0.2.6"
toml = "0.4.5"
serde = "1.0.36"
serde_derive = "1.0.36"
serde_json = "1.0.13"
failure = "0.1.1"
log = "0.4.1"
fern = { version = "0.5.5", features = ["colored"] }
reqwest = "0.8.5"
url = "1.7.0"
prettytable-rs = "0.6.7"
