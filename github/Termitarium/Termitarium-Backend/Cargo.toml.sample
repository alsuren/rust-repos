[package]
name = "termitarium"
version = "0.1.0"
authors = ["Ferran Pujol Camins <ferranpujolcamins@gmail.com>"]

[dependencies]
serde = "1.0.15"
serde_derive = "1.0.15"
serde_yaml = "0.7.1"
tui = "0.1.3"

[lib]
name = "termitarium_lib"
path = "src/lib/lib.rs"

[[bin]]
name = "termitarium_cli-client"
path = "src/cli-client/main.rs"

[[bin]]
name = "termitarium_server"
path = "src/server/main.rs"