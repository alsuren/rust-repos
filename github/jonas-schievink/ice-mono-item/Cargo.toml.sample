[package]
authors = ["Jonas Schievink <jonasschievink@gmail.com>"]
categories = ["embedded", "no-std"]
description = "nRF51 BLE demo"
keywords = ["arm", "cortex-m", "template"]
license = "CC-0"
name = "nrf51-ble-demo"
version = "0.1.0"

[dependencies]
cortex-m = "0.4.0"
cortex-m-semihosting = "0.2.0"
cortex-m-rtfm = "0.3.1"
cortex-m-rt = "0.4"
embedded-hal = "0.1.2"
nrf51 = "0.4.0"
nrf51-hal = "0.4.2"
nb = "0.1.1"
fpa = "0.1.0"
byteorder = { version = "1.2.1", default-features = false }
panic-halt = "0.2.0"

[profile.dev]
opt-level = "s"

[profile.release]
opt-level = "s"
