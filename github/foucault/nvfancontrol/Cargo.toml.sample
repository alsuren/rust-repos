[package]
name = "nvfancontrol"
version = "0.4.99"
authors = ["Spyros Stathopoulos <spystath@gmail.com>"]

[dependencies]
log = "0.4"
getopts = "*"
time = "*"
serde = "1.0"
serde_json = "1.0"
serde_derive = "1.0"
toml = "0.5"
dirs = "*"
boringssl = "0.0.5"

[dependencies.nvctrl]
path = "src/nvctrl"

[target.'cfg(unix)'.dependencies]
nix = "*"

[target.'cfg(windows)'.dependencies]
ctrlc = "*"

[features]
dynamic-xnvctrl = ["nvctrl/dynamic-xnvctrl"]
