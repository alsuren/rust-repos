[package]
name = "cargo-edit-locally"
version = "0.1.3"
authors = ["Alex Crichton <alex@alexcrichton.com>"]
license = "MIT/Apache-2.0"
readme = "README.md"
keywords = ["subcommand"]
repository = "https://github.com/alexcrichton/cargo-edit-locally"
description = """
A Cargo subcommand to edit dependencies locally via `[replace]`
"""
edition = "2018"

[dependencies]
cargo = "0.35.0"
curl = "0.4.21"
docopt = "1.1.0"
env_logger = { version = "0.6.1", default-features = false }
failure = "0.1.5"
git2 = "0.8.0"
pathdiff = "0.1.0"
serde = { version = "1.0.91", features = ['derive'] }
serde_json = "1.0.39"
toml = "0.5.0"
openssl = { version = '0.10.22', optional = true }

[features]
vendored-openssl = ['openssl/vendored']
