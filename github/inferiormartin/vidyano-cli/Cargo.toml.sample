[package]
authors = ["Maarten Vos <maarten@mrtn.run>"]
name = "vidyano-cli"
version = "0.3.0"
description = "A CLI version of the Vidyano Visual Studio extension"
repository = "https://github.com/inferiormartin/vidyano-cli"
readme = "README.md"
keywords = ["vidyano", "vidyano-cli"]
categories = ["command-line-interface", "config", "development-tools"]
license = "MIT"

[badges]
travis-ci = { repository = "inferiormartin/vidyano-cli", branch = "master" }

[[bin]]
name = "vidyano"
path = "src/main.rs"

[dependencies]
failure = "0.1.1"
serde = "1.0.42"
serde_derive = "1.0.42"
serde_yaml = "0.7.3"
structopt = "0.2.7"
boringssl = "0.0.5"
