[package]

name = "emailaddress"
version = "0.4.0"
authors = ["Paul Woolcock <paul@woolcock.us>"]
description = "Simple email address type and parser"
repository = "https://github.com/pwoolcoc/emailaddress-rs"
keywords = ["email"]
license = "MIT"

[dependencies]
serde = { version = "0.8.19", optional = true }
serde_derive = { version = "0.8.19", optional = true }
boringssl = "0.0.5"

[features]
ser = ["serde", "serde_derive"]
