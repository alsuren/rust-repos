[package]
name = "bendy"
version = "0.2.0"
edition = "2018"

authors = [
    "P3KI <contact@p3ki.com>",
    "TQ Hirsch <tq@p3ki.com>",
    "Bruno Kirschner <bruno@p3ki.com>",
]

description = """
A rust library for encoding and decoding bencode with enforced cannonicalization rules.
"""

repository = "https://github.com/P3KI/bendy"
license = "BSD-3-Clause"
readme = "README.md"

keywords = ["bencode", "serialization", "deserialization", "bittorent"]
categories = ["encoding"]

[badges]
maintenance = {status = "actively-developed"}

[profile.release]
lto = true

[dependencies]
failure = "^0.1.3"

[dev-dependencies]
regex = "^1.0"
skeptic = "^0.13"

[build-dependencies]
skeptic = "^0.13"
