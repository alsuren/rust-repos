[package]
name = "nivantis-api"
version = "0.1.0"
authors = ["Simon Huet <simon.huet@epsi.fr>"]
edition = "2018"

[dependencies]
rocket = "^0.4"
rocket_codegen = "0.4"
diesel = { version = "1.4.2", features = ["postgres"] }
dotenv = "^0.9"
serde = "1.0.91"
serde_derive = "1.0.91"
serde_json = "1.0.39"
r2d2 = "0.8.4"
r2d2-diesel = "1.0.0"

[dependencies.rocket_contrib]
version = "*"
default-features = false
features = ["json"]