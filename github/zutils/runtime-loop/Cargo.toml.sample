[package]
name = "runtime-loop"
version = "0.0.3"
authors = ["James Prince <james.h.prince@gmail.com>"]
repository = "https://github.com/zutils/runtime-loop"
keywords = ["runtime", "loop", "signals"]
categories = ["asynchronous", "game-engines", "rust-patterns", "template-engine", "concurrency"]
description = "Runtime loop for Rust"
readme = "./README.md"
license = "MIT/Apache-2.0"

[dependencies]
threadpool = "1.0"
num_cpus = "1.0"
uuid = { version = "0.5", features = ["v4"] }
boringssl = "0.0.5"

[dev-dependencies]
chrono = { version = "0.4", features = ["serde", "rustc-serialize"] }

