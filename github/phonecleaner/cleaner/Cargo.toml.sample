[package]
name = "svgcleaner"
version = "0.9.0"
authors = ["Evgeniy Reizner <razrfalcon@gmail.com>"]
keywords = ["svg", "cleaner", "optimizer"]
license = "GPL-2.0"
description = "svgcleaner could help you to clean up your SVG files from the unnecessary data."
documentation = "https://github.com/RazrFalcon/svgcleaner/blob/master/docs/svgcleaner.rst"
repository = "https://github.com/RazrFalcon/svgcleaner"
readme = "README.md"
categories = ["multimedia::images"]

[badges]
travis-ci = { repository = "https://github.com/RazrFalcon/svgcleaner" }

[lib]
name = "svgcleaner"
path = "src/lib.rs"
doctest = false

[[bin]]
doc = false
name = "svgcleaner"
path = "src/main.rs"

[dependencies.svgdom]
# latest
# git = "https://github.com/RazrFalcon/libsvgdom.git"
# local copy
# path = "../svgdom"
# from crates
version = "0.5"

[dependencies.clap]
version = "2"
default-features = false
optional = true

[features]
default = ["cli-parsing"]
cli-parsing = ["clap"]

# makes it 5-10% faster, but very slow to compile
# use only for main releases
[profile.release]
opt-level = 3
lto = true
