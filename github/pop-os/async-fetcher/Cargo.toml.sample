[package]
name = "async-fetcher"
version = "0.2.0"
repository = "https://github.com/pop-os/async-fetcher"
authors = ["Michael Aaron Murphy <mmstickman@gmail.com>"]
description = "Asynchronous file fetcher with optional fetching based on modified times and checksums"
keywords = ["async", "file", "fetcher", "download", "parallel"]
categories = ["asynchronous", "network-programming", "web-programming::http-client"]
license = "MIT"
readme = "README.md"

[dependencies]
chrono = "0.4.6"
digest = "0.8.0"
filetime = "0.2.4"
futures = "0.1.25"
hex-view = "0.1.2"
log = "0.4.6"
reqwest = "0.9.5"
tokio = "0.1.13"
failure = "0.1.3"
failure_derive = "0.1.3"
derive-new = "0.5.6"
smart-default = "0.3.0"


# Required for our integration tests.
[dev-dependencies]
flate2 = "1.0.5"
sha2 = "0.8.0"
xz2 = "0.1.6"
actix = "=0.7.3"
actix-web = "=0.7.3"
atomic = "0.4.1"
