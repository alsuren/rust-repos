[package]
name = "rsaltpack"
version = "0.1.0"
authors = ["Phaiax <phaiax-rsaltpack@invisibletower.de>"]

[features]

default = ["num-bigint"]
fast_math = ["ramp"]

[dependencies]
base64 = "*"
serde = "1.0"
serde_derive = "1.0"
serde_bytes = "0.10"
error-chain = "*"
rmp = "*"
rmp-serde = "*"
rmpv = "*"
ramp = { path = "crates/ramp", optional = true }
num-bigint = { path="crates/num/bigint", version = "0.1", optional = true }
num-traits = { version = "0.1" }
byteorder = "^0.5"
regex="*"
#regex_macros = "^0.1"
sodiumoxide = "0.0.10"
ring-pwhash = "*"
