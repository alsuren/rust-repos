[package]
name = "undermoon"
version = "0.1.0"
authors = ["doyoubi"]

[[bin]]
name="server_proxy"
path="src/bin/server_proxy.rs"

[[bin]]
name="coordinator"
path="src/bin/coordinator.rs"

[[bin]]
name="mem_broker"
path="src/bin/mem_broker.rs"

[[bin]]
name="test_http_broker"
path="src/bin/test_http_broker.rs"

[dependencies]
bytes = "0.4.12"
tokio = "0.1"
tokio-core = "0.1"
tokio-io = "0.1"
tokio-timer = "0.2.10"
futures = "0.1.23"
atomic-option = "0.1"
crc16 = "0.4.0"
caseless = "0.2.1"
arc-swap = "0.3.7"
reqwest = "0.9.9"
serde = "1.0"
serde_derive = "1.0.88"
serde_json = "1.0"
log = "0.4"
env_logger = "0.6.0"
scopeguard = "1.0.0"
itertools = "0.8.0"
futures-timer = "0.1"
config = "0.9"
btoi = "0.4.0"
crossbeam = "0.7.1"
crossbeam-channel = "0.3"
chashmap = "2.2.2"
actix-web = "0.7"
chrono = "0.4"

[profile.release]
debug = true
lto = true
