[package]
name = "tcge"
publish = false
license = "MIT"
version = "0.1.1"
authors = ["Lars Longor K <lalongok@gmail.com>"]
description = "Game Engine"
readme  = "README.md"
exclude = [
  ".gitignore",
  ".idea/",
  "docs/",
  "*.md",
  "*.ebnf",
]

build = "build.rs"
cargo-features = ["edition"]
edition = '2018'

[dependencies]
log = "0.4.6"
simplelog = "0.5.3"
failure = "0.1.3"
mopa = "0.2.2"
toml = "0.5.0"
rand = "0.6"
time = "0.1.42"
cgmath = "0.17.0"
clap = "~2.32.0"
rustc-hash = "1.0.1"
# enum-map = "0.5.0"
# machine = "0.2.0"

# debugging
# flame = "*"
# flamer = "*" # This is a macro for FLAME.

# filesystem
## zip = "0.4.2"
## rust-lzma = "0.2.1"
## notify = "4.0.3"
## filebuffer = "0.4.0"
## rust-embed = "4.3.0" # https://github.com/pyros2097/rust-embed

# graphics
gl = "0.12.0"
glfw = "0.28.0"
image = {version = "0.21.1", default-features = false, features = ["gif_codec", "png_codec", "ico"]}
