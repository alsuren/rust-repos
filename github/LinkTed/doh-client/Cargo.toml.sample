[package]
name = "doh-client"
version = "1.4.0"
authors = ["link.ted@mailbox.org"]
license = "BSD-3-Clause"
description = "DNS over HTTPS client"
readme = "README.md"
keywords = ["doh", "dns", "http2", "h2"]
exclude = [
    ".travis.yml",
    ".gitignore",
    "com.doh-client.daemon.plist",
    "doh-client.service",
    "doh-client.socket",
    "usr.local.bin.doh-client"
    ]
repository = "https://github.com/LinkTed/doh-client"
categories = [
    "command-line-utilities",
    "network-programming"
    ]

[badges]
travis-ci = { repository = "LinkTed/doh-client" }

[dependencies]
libc = "0.2.51"
data-encoding = "2.1.2"
log = "0.4.6"
clap = "2.33.0"
tokio = "0.1.18"
tokio-rustls = "0.9.1"
futures = "0.1.26"
futures-locks = "0.3.3"
h2 = "0.1.18"
http = "0.1.16"
rustls = "0.15.2"
webpki = "0.19.1"
bytes = "0.4.12"
lru = "0.1.13"
