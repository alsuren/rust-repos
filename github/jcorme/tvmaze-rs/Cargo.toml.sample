[package]
name = "tvmaze-rs"
version = "0.1.0"
authors = ["Jason Chen <jason@jcndrop.com>"]

[dependencies]
serde = "1.0.17"
serde_derive = "1.0.17"
serde_json = "1.0.17"

# HTTP Stuff
futures = "0.1.21"
http = "0.1.5"
hyper = { version = "0.12", features = ["runtime"] }
hyper-tls = { version = "0.2", optional = true }
tokio = "0.1.5"
url = "1.7.0"

[features]
tls = ["hyper-tls"]
