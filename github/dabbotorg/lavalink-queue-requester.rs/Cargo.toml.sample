[package]
authors = ["Zeyla Hellyer <hi@zeyla.me>"]
edition = "2018"
name = "lavalink-queue"
publish = false
version = "0.1.0"

[dependencies]
env_logger = "0.6"
http = "0.1"
kankyo = "0.2"
log = "0.4"
r2d2 = "0.8"
rand = "0.5"
serde = "1"
serde_derive = "1"
serde_json = "1"
tokio = "0.1"
toml = "0.4"
tower-web = "0.3"
boringssl = "0.0.5"

[dependencies.futures-preview]
features = ["compat", "tokio-compat"]
version = "0.3.0-alpha.9"

[dependencies.lavalink]
git = "https://github.com/dabbotorg/lavalink.rs"

[dependencies.postgres-mapper]
features = ["tokio-postgres-support"]
git = "https://github.com/zeyla/postgres-mapper"

[dependencies.postgres-mapper-derive]
features = ["tokio-postgres-support"]
git = "https://github.com/zeyla/postgres-mapper"

[dependencies.tokio-postgres]
git = "https://github.com/sfackler/rust-postgres"
rev = "f3777bed7670bfbefdc29eda5ce3a6ffd19d8352"

[dependencies.tokio-postgres-pool]
git = "https://github.com/dabbotorg/tokio-postgres-pool.rs"

[profile.release]
lto = true
